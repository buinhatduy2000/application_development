extends ../layouts/staffMenu
block content

    h1 List Topic
    table.table 
        tr 
            th Topic name
            th Action
            th Action
        each topic in topics
            tr
                td= topic.topicName
                td
                    a.btn.btn-success(href='/updateTopic/:name') Update
                td 
                    a.btn.btn-danger.ml-4(href='/staff/deleteTopic/' + topic.id) Delete 

    a.btn.btn-primary(href = '/staff/createTopic') Create Topic