extends ../layouts/staffMenu
block content
    h1 Create Course

    if errors
        each error in errors
            .alert.alert-danger= error

    .align-items-center
        form(action="/admin/createCourse" method="POST")
            .form-group 
                label Course name
                input.form-control(name="courseName", type='text', value= values ? values.code : '')

                label Course Category
                select.form-control(name="courseCategory")
                    option(selected='') Choose a category
                    each category in categorys 
                        option= category.category

            button.btn.btn-success Create