extends ../layouts/staffMenu
block content

    .align-items-center
        form(action="/trainer/updateInformation/"+ account.username method="POST")

            .form-group 
                label Name
                input.form-control(name="name", type='text', value='' + account.name) 

                label User Name
                input.form-control(name="username", type='text', value='' + account.username) 

                label Password
                input.form-control(name="password", type='password', value='' + account.password)

                label Date of birth
                input.form-control(name="dateofbirth", type='date', value='' + staff.dateofbirth)

                label Email
                input.form-control(name="email", type='text', value='' + staff.email)

                label Phone number
                input.form-control(name="phonenumber", type='text', value='' + staff.phonenumber)
                
            button.btn.btn-success Update 