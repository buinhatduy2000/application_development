extends ../layouts/staffMenu
block content
    h1 Create Topic

    if errors
        each error in errors
            .alert.alert-danger= error

    .align-items-center
        form(action="/admin/createTopic" method="POST")
            .form-group 
                label Topic Name
                input.form-control(name="topic", type='text', value= values ? values.code : '')
            button.btn.btn-success Create