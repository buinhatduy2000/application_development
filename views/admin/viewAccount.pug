extends ../layouts/adminMenu
block content
    a.btn.btn-primary.mt-4(href = '/admin/createAccount') Create new account 

    #accordion.mt-4
        .card
            #headingOne.card-header
                h5.mb-0
                    button.btn.btn-link(data-toggle='collapse' data-target='#collapseOne' aria-expanded='true' aria-controls='collapseOne')
                        | Admin Account
            #collapseOne.collapse.show(aria-labelledby='headingOne' data-parent='#accordion')
                .card-body
                    table.table.mt-4 
                            tr 
                                th Name
                                th User Name 
                                th Password
                                th Actions 
                            each account in accountAdmin
                                tr
                                    td= account.name
                                    td= account.username
                                    td **********
                                    td 
                                        a.btn.btn-success(href='/admin/updateAccount/'+ account.id) Update 
                                        a.btn.btn-danger.ml-4(href='/admin/deleteAccount/'+ account.id) Delete
                                           
        .card
            #headingTwo.card-header
