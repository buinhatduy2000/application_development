extends ../layouts/adminMenu
block content

    h1 List account
    table.table 
        tr 
            th Name
            th User Name 
            th Password
            th Role
            th Actions 
        each account in accounts
            tr
                td= account.name
                td= account.username
                td **********
                td= account.role
                td
                    a.btn.btn-success(href='/admin/updateAccount/'+ account.id) Update 
                    a.btn.btn-danger.ml-4(href='/admin/deleteAccount/'+ account.id) Delete 


    a.btn.btn-primary(href = '/admin/createAccount') Create new account 