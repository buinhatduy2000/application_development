extends ../layouts/adminMenu
block content
    h1 Create Topic

    if errors
        each error in errors
            .alert.alert-danger= error

    .align-items-center
        form(action="/admin/createTopic/:course" method="POST")
            .form-group 
                label Topic Name
                input.form-control(name="topic", type='text', value= values ? values.code : '')
                input(name="courseName", type='hidden', value='' + course)
            button.btn.btn-success Create