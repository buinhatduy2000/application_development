extends ../layouts/adminMenu
block content
    h1 Create Topic

    if errors
        each error in errors
            .alert.alert-danger= error

    .align-items-center
        form(action="/admin/updateTopic/" + topic.id method="POST")
            .form-group 
                label Topic Name
                input.form-control(name="topic", type='text', value= values ? values.code : '' + topic.topicName)
            button.btn.btn-success Update